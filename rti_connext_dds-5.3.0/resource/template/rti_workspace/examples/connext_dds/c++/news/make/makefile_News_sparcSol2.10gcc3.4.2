objs/$(TARGET_ARCH)/%.o : $(SOURCE_DIR)%.cxx  $(SOURCE_DIR)News.h $(SOURCE_DIR)NewsPublisher.h $(SOURCE_DIR)NewsSubscriber.h 
	$(COMPILER) $(COMPILER_FLAGS)  -o $@ $(DEFINES) $(INCLUDES) -c $<

